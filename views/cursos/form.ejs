<%- include('../partials/header') %>
    <h2><%= curso.id ? 'Editar' : 'Novo' %> Curso</h2>
    
    <form action="/cursos/salvar" method="POST">
        <input type="hidden" name="id" value="<%= curso.id || '' %>">
        
        <div class="form-group">
            <label>Nome do Curso:</label>
            <input type="text" name="nome" value="<%= curso.nome || '' %>" required>
        </div>

        <div class="form-group">
            <label>Carga Hor√°ria (ex: 60h):</label>
            <input type="text" name="cargaHoraria" value="<%= curso.cargaHoraria || '' %>" required>
        </div>

        <div class="form-group">
            <label>
                <input type="checkbox" name="ativo" style="width:auto" <%= (!curso.id || curso.ativo) ? 'checked' : '' %>> Curso Ativo
            </label>
        </div>

        <button type="submit" class="btn btn-success">Salvar</button>
        <a href="/cursos" class="btn btn-danger">Cancelar</a>
    </form>
<%- include('../partials/footer') %>