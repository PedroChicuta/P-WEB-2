<%- include('../partials/header') %>
    <h2>Nova Matr√≠cula</h2>
    
    <% if (errors && errors.matricula) { %>
        <div style="background: #f8d7da; color: #721c24; padding: 10px; margin-bottom: 15px; border-radius: 4px;">
            <%= errors.matricula %>
        </div>
    <% } %>

    <form action="/matriculas/salvar" method="POST">
        
        <div class="form-group">
            <label>Aluno:</label>
            <select name="alunoId" required>
                <option value="">Selecione um aluno...</option>
                <% alunos.forEach(aluno => { %>
                    <option value="<%= aluno.id %>"><%= aluno.nome %> (Matr: <%= aluno.matricula %>)</option>
                <% }) %>
            </select>
        </div>

        <div class="form-group">
            <label>Curso (Apenas Ativos):</label>
            <select name="cursoId" required>
                <option value="">Selecione um curso...</option>
                <% cursos.forEach(curso => { %>
                    <option value="<%= curso.id %>"><%= curso.nome %> (<%= curso.cargaHoraria %>)</option>
                <% }) %>
            </select>
        </div>

        <div class="form-group">
            <label>Data:</label>
            <input type="date" name="data" value="<%= new Date().toISOString().split('T')[0] %>" required>
        </div>

        <input type="hidden" name="status" value="ativa">

        <button type="submit" class="btn btn-success">Matricular</button>
        <a href="/matriculas" class="btn btn-danger">Cancelar</a>
    </form>
<%- include('../partials/footer') %>